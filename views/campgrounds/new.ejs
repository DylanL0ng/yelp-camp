<% include ../partials/header %>
<div class='container'>
    <h1 class='text-center py-3'>Create a new Campground</h1>
    
    <div class='row'>
        <div style='width:50%; margin: 0 auto'>
        <form action='/campgrounds' method='POST'>
            <div class='form-group'>
            <input class='form-control'type='text' name='name' placeholder='name' required>
            </div>
            <div class='form-group'>
            <input class='form-control'type='text' name='image' placeholder='image url' required>
           </div>
           <div class='form-group'>
            <input class='form-control'type='text' name='description' placeholder='description' required>
           </div>
           <div class='form-group'>
            <input class='form-control' type='number' name='price' min='0.00' step='.50' placeholder='0.00' required>
           </div>
           <div class='form-group'>
            <input class='btn btn-lg btn-dark btn-block'type='submit'>
            </div>
        </form>
        <a href='/campgrounds'>Go back</a>
        </div>
        
       
    </div>
     
</div>

<% include ../partials/footer %>