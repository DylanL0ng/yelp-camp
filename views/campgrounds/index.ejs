<% include ../partials/header %>
    
    <header class='jumbotron'>
    <h1 >Welcome To YelpCamp</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add New Campground</a>
            </p>
    </header>
    
    <div class='container'>
 
 <div class='col-lg-12'>
            <h3 class='text-center'>Our Most Popular Campground</h3>
        </div> 
 
    <div class='row d-flex flex-wrap'>
    <% campgrounds.forEach(function(camp){ %>
        <div class='col-md-3 col-sm-6'>
               <div class='img-thumbnail my-2'>
                   <img src='<%=camp.image%>' style='max-width: 100%'>
                   <div class='lead'>
                   <h4 class='text-center'><%= camp.name %></h4>
                   
                   </div>
                       <div class='container text-center'>
                       <p>
                           <a href='/campgrounds/<%= camp._id %>' class='btn btn-dark text-center'> More Info</a>
                       </p>
                       </div>
               </div>
               
            </div>
    <% }) %>
    </div>
</div>         

<% include ../partials/footer %>